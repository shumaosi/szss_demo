<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/all_white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/jixuan_item_image1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/jinxuanicon1"/>

        <View
            android:layout_width="1px"
            android:layout_height="150dp"
            android:layout_weight="0"
            android:background="@color/gray_eeeeee"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/jixuan_item_image2"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="2"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="center"
                android:src="@drawable/jinxuanicon2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_eeeeee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/jixuan_item_image3"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="center"
                    android:src="@drawable/jinxuanicon3"/>

                <View
                    android:layout_width="1px"
                    android:layout_height="75dp"
                    android:layout_weight="0"
                    android:background="@color/gray_eeeeee"/>

                <ImageView
                    android:id="@+id/jixuan_item_image4"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:scaleType="center"
                    android:src="@drawable/jinxuanicon4"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_eeeeee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/jixuan_item_image5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/jinxuanicon5"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@color/gray_eeeeee"/>

        <ImageView
            android:id="@+id/jixuan_item_image6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/jinxuanicon6"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@color/gray_eeeeee"/>

        <ImageView
            android:id="@+id/jixuan_item_image7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/jinxuanicon7"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@color/gray_eeeeee"/>

        <ImageView
            android:id="@+id/jixuan_item_image8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/jinxuanicon8"/>

    </LinearLayout>

</LinearLayout>