<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/background_white_l">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground">

        <com.szss.androidapp.view.RoundedImageView
            android:id="@+id/profileinfo_view_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wuwei"
            app:corner_radius="48dp"/>

        <TextView
            android:id="@+id/profileinfo_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profileinfo_view_icon"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/profileinfo_view_icon"
            android:text="wuwei"
            android:textColor="@color/text_black_22"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/profileinfo_view_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileinfo_view_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/profileinfo_view_icon"
            android:text="信息中心"/>

    </RelativeLayout>

</RelativeLayout>